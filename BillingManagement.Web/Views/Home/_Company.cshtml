@model BillingManagement.Web.Models.Company
    
<table class="hovertable">
    <tr>
        <th>Company Name</th>
        <th>Sites</th>
        <th></th>
    </tr>
    <tr>
        <td>
            @Model.Name
        </td>

        <td>
            <table class="hovertable">
                @foreach (var site in Model.SitesList)
                {
                    @Html.Partial("_Site", site)
                }
                        
                @Html.ActionLink("Add Site", "Create", "Sites")
                        
            </table>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Companies") !
            @Html.ActionLink("Delete", "Delete", "Companies")
        </td>
    </tr>
</table>
